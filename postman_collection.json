{
  "info": {
    "name": "Pet Adoption API - Collection",
    "_postman_id": "pet-adoption-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Admin\", \"email\": \"admin@example.com\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"admin@example.com\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "Create Pet (with photos)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/pets",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "pets"
          ]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "name",
              "value": "Buddy",
              "type": "text"
            },
            {
              "key": "species",
              "value": "Dog",
              "type": "text"
            },
            {
              "key": "photos",
              "type": "file",
              "src": ""
            }
          ]
        }
      }
    },
    {
      "name": "Upload Photos to Pet",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/pets/:id/photos",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "pets",
            ":id",
            "photos"
          ]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "photos",
              "type": "file",
              "src": ""
            }
          ]
        }
      }
    },
    {
      "name": "List Pets",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pets",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "pets"
          ]
        }
      }
    },
    {
      "name": "Apply for Pet",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/applications",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "applications"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"petId\": \"{{petId}}\", \"message\": \"I would love to adopt\"}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "petId",
      "value": ""
    }
  ]
}